<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="match_parent"
    android:layout_height="300dip"
    android:layout_gravity="center_vertical|center_horizontal|center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="3" >

    <mbLib.CusFntTextView
        android:id="@+id/TextView01"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:layout_weight="0.7"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:background="#de0024" />

    <mbLib.CusFntTextView
        android:id="@+id/txt_dia"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_margin="5dip"
        android:gravity="center"
        android:layout_weight="1.6"
        android:textSize="18sp"
        android:text="Custom Dialog Example By mayuri.... ................................"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.7"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" />

        <mbLib.CustomButton
            android:id="@+id/btn_ok"
            style="@mipmap/button_style"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@mipmap/button_style"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="@string/lbl_001"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.4" />

        <mbLib.CustomButton
            android:id="@+id/btn_cancel"
            style="@mipmap/button_style"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@mipmap/button_style"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="@string/lbl_002"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" />
    </LinearLayout>

</LinearLayout>