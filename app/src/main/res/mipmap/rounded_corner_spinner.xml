<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
 
    <!-- view background color  f79e5c -->
    <solid
        android:color="#422874" >
    </solid>
 
    <!-- view border color and width -->
    <stroke
        android:width="1dp"   
        android:color="#422874" ><!-- android:color="@color/spinner_bg_color" -->
    </stroke>
 
    <!-- If you want to add some padding -->
    <padding
        android:left="2dp"
        android:top="4dp"
        android:right="2dp"
        android:bottom="4dp"    >
    </padding>
 
    <!-- Here is the corner radius -->
    <corners
        android:radius="5dp"   >
    </corners>
 
</shape>