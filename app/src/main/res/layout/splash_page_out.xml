<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    android:background="@color/bg_color"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dip"
        android:layout_weight="3"
        android:src="@mipmap/bank_logo_large" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <mbLib.CustomButton
            android:id="@+id/continue_btn"
            style="@mipmap/button_style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="2.6"
            android:gravity="center"
            android:text="@string/lbl_003"
            android:textColor="@color/bg_color"
            android:textSize="20dip" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />
    </LinearLayout>

    <mbLib.CusFntTextView
        android:id="@+id/dynamicmsg"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/alert_session"
        android:textColor="#e33d1b"
        android:textSize="17dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1" >

            <mbLib.CusFntTextView
                android:id="@+id/txt_version_no"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>